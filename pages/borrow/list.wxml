<view class="page">
    <view class="page__bd">
        <view class="weui-panel">
            <view class="weui-panel__bd">
                <block wx:if="{{borrows.length>0}}">
                    <block wx:for="{{borrows}}" wx:key="{{item.id}}">
                        <navigator url="./detail?id={{item.id}}" class="weui-media-box weui-media-box_text">
                            <view class="weui-media-box__title weui-media-box__title_in-text">{{item.book.data.title}}</view>
                            <view class="weui-media-box__info">
                                <view class="weui-media-box__info__meta"><text style="color:green">{{item.status}}</text></view>
                                <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">位置：{{item.location.data.location}}</view>
                                <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">价格：¥ {{item.location.data.money}}</view>
                            </view>
                        </navigator>
                    </block>
                </block>
                <block wx:else>
                    <view class="weui-media-box weui-media-box_small-appmsg">
                        <view class="weui-cells weui-cells_in-small-appmsg">
                            <view class="weui-cell weui-cell_access">
                                <view class="weui-cell__bd weui-cell_primary">
                                    <view>还没有借阅记录</view>
                                </view>
                            </view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    </view>
</view>