<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{userInfo.avatarUrl}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">
                            <block wx:if="{{userInfo}}">
                                <text>{{userInfo.nickName}}</text>
                            </block>
                            <block wx:else>
                                <text bindtap="getUserInfo">未登录，点击登录</text>
                            </block>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <block wx:if="{{userMobile}}">
            <view class="weui-cells__title"></view>
            <view class="weui-cells weui-cells_after-title">
                <navigator url="../favorite/favorite" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd">我的收藏</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <navigator url="../borrow/list" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd">我的借阅</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <block wx:if="{{userRole>=100}}">
                    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                        <view class="weui-cell__bd" bindtap="scanQrCode">管理员扫码</view>
                        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                    </view>
                </block>
            </view>
        </block>
        <block wx:else>
            <form bindsubmit="submitInfo">
                <view class="weui-cells__title">完善您的信息</view>
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input weui-cell_vcode">
                        <view class="weui-cell__hd">
                            <view class="weui-label">手机号码</view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" name="mobile" placeholder="请输入手机号码" bindinput="bindMobileInput" />
                        </view>
                        <view class="weui-cell__ft">
                            <button class="weui-btn" size="mini" disabled="{{sendCode}}" bindtap="sendCode" style="display:block;margin-right:5px">{{sendCodeText}}</button>
                        </view>
                    </view>
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__hd">
                            <view class="weui-label">验证码</view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" name="code" placeholder="请输入验证码" />
                        </view>
                    </view>
                    <view class="weui-cell weui-cell_input">
                        <view class="weui-cell__hd">
                            <view class="weui-label">密码</view>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" name="password" placeholder="请输入密码" />
                        </view>
                    </view>
                </view>
                <view class="weui-btn-area">
                    <button class="weui-btn" type="primary" form-type="submit">提交</button>
                </view>
            </form>
        </block>
    </view>
</view>